{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/packages/providers/medusa-plugin-btcpay/src/providers/payment-btcpay/src/core/btc-pay-base.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend-v2 debug",
            
            "program": "${workspaceFolder}/node_modules/@medusajs/medusa/dist/bin/medusa.js",
            "cwd": "${workspaceFolder}",
            "args": [
              "start"
            ],
            "runtimeArgs": [
              "--preserve-symlinks",
              "--preserve-symlinks-main",
              "--trace-warnings","--experimental-modules"
            ],
            "env": {
            "DEBUG": "expres:*",
            "PORT":"9500"
            },
            "sourceMaps": true,
            "resolveSourceMapLocations": [
              "${workspaceFolder}/../**",
              "!**/node_modules/**"
            ],
            "console": "integratedTerminal",
            "trace": true
          },
    ]
}